<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/community.css">
</head>
<body>
    <%- include('./layout/header.ejs')%>
<main>
    <%if(!recipeData.length){%>
        <h2>you don't have data</h2>
    <%}else{ recipeData.forEach(item=>{%>
            <section>
                <!-- <h2><%=item.username%></h2> -->
                <h2 id='title'><%=item.recipename%></h2>
                <figure>
                    <img src="<%=item.img_url%>" alt="">
                    <figcaption>
                        <%=item.username%>
                    </figcaption>
                </figure>
                <div>
                    <h2> Serving: <%=item.serving%></h2> 
                    <h2> Preperaction Time: <%=item.time%> min </h2>
                </div> 
                <h2>Ingredients</h2>
                <h2><%=item.ingredient%></h2>
                <h2> Instructions</h2>
                <h2><%=item.instuctions%></h2>
            </section>
        <%})%>
    <%}%>
</main>
<%- include('./layout/footer.ejs')%>
</body>
</html>