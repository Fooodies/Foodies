<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/community.css">
</head>

<body>
    <%- include('./layout/header.ejs')%>
        <main>
            <%if(!recipeData.length){%>
                <h2>you don't have data</h2>
                <%}else{ console.log(comments); recipeData.forEach(item=>{%>
                    <section>
                        <!-- <h2><%=item.username%></h2> -->
                        <h2 id='title'>
                            <%=item.recipename%>
                        </h2>
                        <figure>
                            <img src="<%=item.img_url%>" alt="">
                            <figcaption>
                                <%=item.username%>
                            </figcaption>
                        </figure>
                        <div>
                            <h2> Serving: <%=item.serving%>
                            </h2>
                            <h2> Preperaction Time: <%=item.time%> min </h2>
                        </div>
                        <h2>Ingredients</h2>
                        <h2>
                            <%=item.ingredient%>
                        </h2>
                        <h2> Instructions</h2>
                        <h2>
                            <%=item.instuctions%>
                        </h2>
                        <button id="<%=item.id%>">Show comments</button>
                        <div id="commentsSection<%=item.id%>"  style="display: none;">
                            <div id="allComments<%=item.id%>">
                                <%if(comments[`${item.id}`]){ comments[`${item.id}`].forEach(comment=>{ %>
                                    <div>
                                        <%=comment%>
                                    </div>
                                    <% })} %>
                            </div>
                            <form action="/community/<%=item.id%>?_method=put" method="POST">
                                <input type="text" name="ccc" id="addedComment<%=item.id%>"
                                    placeholder="Add your comment">
                                <button class="addComment" id="addComment<%=item.id%>">Comment</button>
                            </form>
                        </div>
                    </section>
                    <%})%>
                        <%}%>
        </main>
        <%- include('./layout/footer.ejs')%>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="js/community.js"></script>
</body>

</html>