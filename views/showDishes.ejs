<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.8/css/all.css'>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700'>
    <link rel="stylesheet" href="css/showDishes.css">
</head>

<body>
    <%- include('./layout/header.ejs')%>
    <main>
<h1>Search Results</h1>
    <%if(!dishes.length){%>
        <h2>no data</h2>
        <a href="/search"> back to search page</a>
        <%}else{%>
            <div class="content-wrapper">
    <% dishes.forEach(element=> { %>
        <div class="news-card">
            <img src="<%= element.image %>" alt="" class="news-card__image">
            <div class="news-card__text-wrapper">
                <h2 class="news-card__title">
                    <%= element.title %>
                </h2>
                <div class="news-card__details-wrapper">
                    <form action="/details" method="POST">
                        <input type="hidden" name="Resid" value="<%=element.id%>">
                        <button type="submit" class="custom-btn btn-5"> Show Recipe </button>
                    </form>
                </div>
            </div>
        </div>
    
        <% }) %>
    </div>
        <form action="<%=url%>" method='POST' id='nextform'>
            <input type="hidden" name="page" value="<%=page%>">
            <button onclick="preventDef()" class="custom-btn btn-2 bb">next</button>
        </form>
        <%}%>
    </main>
    <%- include('./layout/footer.ejs')%>
</body>
<!-- <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> -->
<script>
    function preventDef(event){
        event.preventDefault();
    }
</script>
</html>